
<br><br>
<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">Sign Up</h1>
    <br>
    <hr align = "center">
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
      </div>
      
      <div class="form-group">
       <%= f.text_field :nickname, autofocus: true, class: 'form-control', placeholder: 'Nickname' %>
      </div>
        
        <div class="btn-group" data-toggle="radio_button">
        <label class="radio_button "> 숙명여자대학교<%= f.radio_button :school, '숙대' %> </label>
        <label class="radio_button active"> 이화여자대학교 <%= f.radio_button :school, '이대' %> </label>
        </div>
    
    
      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-warning btn-block btn-lg" %>
      </div>
    <% end %>
  

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
